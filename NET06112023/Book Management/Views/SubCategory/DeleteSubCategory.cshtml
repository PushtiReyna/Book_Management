@model Book_Management.Models.SubcategoryMst


<div class="form-row">

    <h4>Delete SubCategory</h4>


    <form method="post" asp-action="DeleteSubCategory">
        <div class="form-group col-md-6">
            <input type="hidden" class=" form-control" asp-for=SubcategoryId readonly />

            <label>Category Name</label>
            <select class="form-control" asp-for="CategoryId" id="categorylist" asp-items="ViewBag.categoryList" readonly" >
                <option>Select category</option>
            </select>
        </div>

        <div class="form-group col-md-6">
            <label> SubCategory name</label>
            <input type="text" class="form-control" asp-for="SubcategoryName" placeholder="Enter SubcategoryName" readonly/>
        </div>

        <div class="col-12">

            <button type="submit" class="btn btn-primary text-center">Delete</button>
            <a class="btn btn-danger m-1 text-white text-center" asp-action="GetSubCategory">Cancel</a>

        </div>
    </form>
</div>

